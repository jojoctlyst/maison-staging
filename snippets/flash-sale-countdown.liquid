    margin: 0;
    margin-bottom: 8px;
    font-weight: 500;
    text-align: center;
  }
  .flash-sale-countdown {
    display: flex;
    font-weight: 500;
    color: #fff;
  }
  .flash-sale-countdown span {
    padding: 4px 0;
    margin: 0 8px;
  }
  .fs-clock-wrapper {
    text-align: center;
  }
  .fs-clock-wrapper span {
    font-size: 10px;
    margin: 0;
  }
  .fs-clock {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background-color: white;
    color: #12784A;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fs-ic-clock {
    width: 20px;
    height: 20px;
    margin: auto 8px;
  }

  @media (max-width: 575px) {
    .clockdown {
      display: flex;
      align-items: center;
    }
    .flash-sale-title {
      color: #12784A;
      width: fit-content;
      margin: 0;
      margin-right: 8px;
    }
    .fs-clock-wrapper span {
      display: none;
    }
