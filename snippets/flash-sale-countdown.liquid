{%- assign comingSoonDate = settings.flash_sale_coming_soon -%}
{%- assign startDate = settings.flash_sale_start -%}
{%- assign endDate = settings.flash_sale_end -%}
{%- unless startDate != '' and endDate != '' and enable_flash_sale -%}
  <div class="clockdown" id="desktop-flash-sale"></div>
{%- endunless -%}

<script>
  var comingSoonDate = '{{comingSoonDate}}';
  var startDate = '{{startDate}}';
  var endDate = '{{endDate}}';
  var now = moment(new Date())
  var expired = moment(endDate).add(1 ,'hour')

  var validationDate = {
    comingSoon: moment(comingSoonDate).isValid(),
    startDate: moment(startDate).isValid(),
    endDate: moment(endDate).isValid(),
  }

  console.table(validationDate)

  var activeDate = {
    comingSoon: false,
    eventStart: false,
    eventEnd: false
  }

  const updateActiveDate = function() {
    activeDate = {
      ...activeDate,
      comingSoon: moment(now).isBetween(comingSoonDate, startDate),
      eventStart: moment(now).isBetween(startDate, endDate),
      eventEnd: moment(now).isAfter(endDate)
    }
  }

  updateActiveDate()

  var targetDate = null
  const updateTarget = function() {
    if (activeDate.comingSoon) {
      targetDate = moment(startDate)
    } else if (activeDate.eventStart) {
      activeDate.comingSoon = false
      targetDate = moment(endDate)
    } else if (activeDate.endDate) {
      activeDate.startDate = false
      targetDate = null
    }
  }

  updateTarget()

  var flashSaleDate = moment(targetDate).format('YYYY/MM/DD HH:mm')

  var textComingSoon = "dimulai dalam"
  var textStartEvent = "berakhir dalam"
  var textEndEvent = "flash sale berakhir"

  var render = `
    <p class="flash-sale-title"></p>
    <div class="flash-sale-countdown">
      <img class="fs-ic-clock isMobile" src="https://cdn.shopify.com/s/files/1/0518/4549/7001/files/ic-clock_256x256_crop_center.png" />
      <div class="fs-clock-wrapper">
        <div class="fs-clock">%H</div>
        <span>JAM</span>
      </div>
      <span>:</span>
      <div class="fs-clock-wrapper">
        <div class="fs-clock">%M</div>
        <span>MENIT</span>
      </div>
      <span>:</span>
      <div class="fs-clock-wrapper">
        <div class="fs-clock">%S</div>
        <span>DETIK</span>
      </div>
    </div>
  `

  if (flashSaleDate && flashSaleDate !== 'Invalid date') {
    $('.flash-sale-collection').removeClass('hidden')
    $(".clockdown").countdown(flashSaleDate,  function(event) {
      $('.clockdown').html(event.strftime(render));
      $(".flash-sale-title").text(textComingSoon)
    }).on('update.countdown', function(event) {
      updateActiveDate()

      if (activeDate.comingSoon) {
        $('.flash-sale-collection').addClass("comingsoon")
        $(".flash-sale-title").text(textComingSoon)
      }
      if (activeDate.eventStart) {
        $('.flash-sale-collection').removeClass("comingsoon")
        $(".flash-sale-title").text(textStartEvent)
      }
      if (activeDate.eventEnd) {
        $('.flash-sale-collection').removeClass("comingsoon")
        $(".flash-sale-title").text(textEndEvent)
      }
    }).on('finish.countdown', function (event) {

      if (activeDate.eventStart) {
        $('.flash-sale-collection').addClass('hidden')
      }

      if (activeDate.comingSoon) {
        window.location.reload()
      }
    });
  } else {
    $('.flash-sale-collection').addClass('hidden')
  }

</script>


