                    $('.buyinoneclick').replaceWith('<p class="tt-loading-text">' + loadname + '</p>')
                  })
                  .find('span[aria-hidden=true]').first().text(buttonname+' ');
                }
                else{
                  $(".shopify-payment-button__button")
                  .on("click", function(){
                    $('.buyinoneclick').replaceWith('<p class="tt-loading-text">' + loadname + '</p>')
                  })
                  .text(buttonname);
                }
                $buyinoneclick.fadeIn()
              }, 300);
