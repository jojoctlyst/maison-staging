{%- if footer_additional != '' and footer_additional.settings.show_content -%}
{% unless item.footer_col %}
  <div class="tt-col-right">
{% endunless %}
  <div class="footer_download_list tt-col-item">
    <h3 class="footer-additional-title">{{ footer_additional.settings.additional_download_title }}</h3>
    <ul class="tt-download-list">
      {%- for i in (1..2) -%}
      {%- assign img = 'download_icon_' | append: forloop.index -%}
      {%- assign img = footer_additional.settings[img] -%}
      {%- assign url = 'download_url_' | append: forloop.index -%}
      {%- assign url = footer_additional.settings[url] -%}
      {%- if img != blank -%}
      <li>
        {% if url == blank %}
        <div>
        {% else %}
        <a href="{{ url }}">
        {% endif %}
          {% assign imgsized = 'x' | append: footer_additional.settings.download_icons_max_height %}
          {% assign imgsizer = footer_additional.settings.download_icons_max_height | times: 2 %}
          {% assign imgsizer = 'x' | append: imgsizer %}
          <img class="lazyload"
               data-src="{{ img | img_url: imgsized }}"
               data-srcset="{{ img | img_url: imgsized }} 1x, {{ img | img_url: imgsizer }} 2x"
               alt="{{ img.alt }}"
               style="height:{{ footer_additional.settings.download_icons_max_height }}px;">
        {% if url != blank %}
        </a>
        {% else %}
        </div>
        {% endif %}
      </li>
      {%- endif -%}
      {%- endfor -%}
    </ul>
  </div>
{% unless item.footer_col %}</div>{% endunless %}
<style>
  .footer_download_list {
    margin-bottom: 16px;
  }
  .tt-download-list {
    display: flex;
    gap: 14px;
    list-style: none;
    padding: 0;
  }
  @media (max-width: 575px) {
    .footer_download_list {
      display: flex;
      justify-content: center;
    }
    .footer_download_list .footer-additional-title {
      display: none;
    }
    .tt-download-list {
      gap: 20px !important;
      flex-wrap: wrap;
      justify-content: center;
      margin: 8px 0;
    }
  }
</style>
{%- endif -%}
